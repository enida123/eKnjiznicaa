@model ChangePasswordVM
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Client/Views/_Layout.cshtml";
}



<h2>ChangePassword</h2>



<form method="post" asp-action="ChangePassword" asp-controller="Profil" class="myForm">


    @Html.AntiForgeryToken()
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    <div class="form-group">
        <label for="CurrentPassword">Current password</label><br />
        <input type="password" asp-for="CurrentPassword" class="form-control" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        @if (!String.IsNullOrEmpty(Model.ErroMessage))
        {
            <p>@Model.ErroMessage</p>
        }
        <br />
    </div>

    <div class="form-group">
        <label for="NewPassword">New password</label><br />
        <input type="password" asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
        <br />
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Confirm password</label><br />
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <br />
    </div>

    <input type="submit" class="myBtn" value="Update">
</form>


