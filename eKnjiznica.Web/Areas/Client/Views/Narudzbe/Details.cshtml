@model OrderDetailsVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Client/Views/_Layout.cshtml";
}



<div class="box" style="width:1090px;">
    <div class="box-header">
        @if (!String.IsNullOrEmpty(Model.Message))
        {
            <h3>@Model.Message</h3>
        }
        <br />
        <br />

        <h3 class="box-title"><i class="fa fa-shopping-cart"></i>  Košarica</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Knjiga</th>
                    <th>Autor</th>
                    <th>Cijena</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var x in Model.items)
                {

                    <tr>
                        <td>@x.Books.Title</td>

                        <td>@x.Books.AuthorName</td>
                        <td>@x.Price</td>
                        <td>
                            <a asp-route-Id="@x.Id" asp-controller="Narudzbe" asp-action="RemoveFromCart" asp-area="Client" class="btn btn-danger"><i class="fa fa-remove"></i> </a>

                        </td>
                    </tr>
                }



            </tbody>

        </table>
      
        <br />
        <br />
        <form method="post" asp-action="Checkout" asp-controller="Narudzbe" asp-area="Client" class="form-horizontal" style="margin-left:10px;">
            <input type="hidden" asp-for="Order.Id"/>
            <h5>Ukupna cijena:</h5>

            <div class="form-group">
                <div class="col-sm-10">
                    <input type="text" style="width:100px;" asp-for="Total" class="form-control" id="usr">
                    <label class="control-label " style="padding-left:20px;" for="usr">KM </label>

                </div>

            </div>
            <input type="submit"  value="Potvrdi" class="btn btn-outline-primary" />
        </form>

            <!-- /.box-body -->
    </div>
    <br />
    
    <br />
    <br />
</div>


