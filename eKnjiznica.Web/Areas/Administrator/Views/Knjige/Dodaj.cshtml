@model KnjigaAddEditVM

@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Areas/Administrator/Views/_Layout.cshtml";
}
<div class="box box-primary" style="width:400px;">
    <div class="box-header with-border">
        @if (Model.books.Id == 0)
        {
            <h3 class="box-title">Nova knjiga</h3>
        }
        else
        {
            <h3 class="box-title">Editovanje podataka o knjizi</h3>

        }
        <br />
    </div>
    <form asp-action="Snimi" class="myForm">

        <input type="hidden" asp-for="books.Id" />
        <br />

        <div class="form-group">
            <label for="name">Naziv</label>
            <input type="text" asp-for="books.Title" class="form-control" placeholder="Naslov">
        </div>

        <div class="form-group">
            <label for="autor">Autor</label>
            <input type="text" asp-for="books.AuthorName" class="form-control" placeholder="Autor">
        </div>

        <div class="form-group">

            <label for="datum">Datum objavljivanja</label>
            @if (Model.books.Id == 0)
            {
                <input type="date" asp-for="books.DatePublished" value="@DateTime.Now" class="form-control" placeholder="Datum objavljivanja">
            }
            else
            {
            <input type="date" asp-for="books.DatePublished" class="form-control" placeholder="Datum objavljivanja">
            }

        </div>

        <div class="form-group">

            <label for="price">Cijena</label>
            <input type="text" asp-for="books.Price" class="form-control" placeholder="Datum objavljivanja">

        </div>

        <div class="form-group">

            <label for="description">Opis</label><br />
            <textarea id="editor1" style="width:100%" rows="10" cols="80" asp-for="books.Description"> </textarea>

        </div>

        <div class="form-group">
            <label for="categorie">Kategorije:</label>
            <select id="job" class="form-control" asp-for="books.CategorieId" asp-items="@Model.kategorije"></select>
        </div>

        <div class="form-group">
            @if (Model.books.Id != 0)
            {<label>Aktivna: </label>
                @Html.CheckBoxFor(Model => Model.books.IsActive)
            }
        </div>

        <div class="box-footer">
            <input type="submit" class="myBtn" value="Snimi">
        </div>
    </form>
 </div>